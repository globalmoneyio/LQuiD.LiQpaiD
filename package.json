{
  "name": "liquity",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/mocha",
      "**/@nomiclabs/*",
      "**/*buidler*",
      "**/solidity-coverage",
      "**/ts-node",
      "**/typescript",
      "**/eslint*",
      "**/@typescript-eslint/*",
      "**/@graphprotocol/*"
    ]
  },
  "scripts": {
    "build": "run-s build:*",
    "build:dev-frontend": "yarn workspace @liquity/dev-frontend build",
    "prepare": "run-s prepare:*",
    "prepare:decimal": "yarn workspace @liquity/decimal prepare",
    "prepare:lib-base": "yarn workspace @liquity/lib-base prepare",
    "prepare:lib-near": "yarn workspace @liquity/lib-near prepare",
    "rebuild": "run-s prepare build",
    "start-dev-frontend": "yarn workspace @liquity/dev-frontend start"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
